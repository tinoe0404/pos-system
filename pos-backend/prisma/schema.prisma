generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  admin
  cashier
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique
  password_hash String
  role          UserRole @default(cashier)
  created_at    DateTime @default(now())

  @@map("users")
}